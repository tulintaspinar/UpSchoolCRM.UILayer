@model MailRequest
@{
    ViewData["Title"] = "SendEmail";
    Layout = "~/Views/Shared/_EmployeeLayout.cshtml";
}
<form method="post">
    <br />
    <label>Alıcı mail</label>
    <input type="text" asp-for="ReceiverEmail" class="form-control" />
    <br />
    <label>Mesaj Konusu</label>
    <input type="text" asp-for="EmailSubject" class="form-control" />
    <br />
    <label>İçerik</label>
    <textarea rows="3" cols="2" asp-for="EmailContent" class="form-control"> </textarea>
    <br />
    <button type="submit" class="btn btn-primary">GÖNDER</button>
</form>
