@model List<AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_CrmLayout.cshtml";
}

<h1>ROL LİSTESİ</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Rol Adı</th>
        <th>Rol Sil</th>
        <th>Rol Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="/Role/DeleteRole/@item.Id" class="btn btn-danger">SİL</a></td>
            <td><a href="/Role/UpdateRole/@item.Id" class="btn btn-danger">GÜNCELLE</a></td>
        </tr>
    }
</table>
<a href="/Role/AddRole" class="btn btn-primary">Yeni Rol Girişi</a>